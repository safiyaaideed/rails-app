<p id="notice"><%= notice %></p>

<h1>Shoes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Text</th>
      <th>Price</th>
      <th>Availability</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.name %></td>
        <td><%= shoe.description %></td>
        <td><%= shoe.text %></td>
        <td><%= shoe.price %></td>
        <td><%= shoe.availability %></td>
        <td><%= shoe.category %></td>
        <td><%= shoe.user_id %></td>
        <td><%= link_to 'Show', shoe %></td>
        <td><%= link_to 'Edit', edit_shoe_path(shoe) %></td>
        <td><%= link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

