
<%= simple_form_for(@authentic) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :Sneakers %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :availability %>
    <%= f.input :category_id, collection: categories.map{|cat| [cat.name, cat.id]} %>
    <%= f.file_field :photo%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
